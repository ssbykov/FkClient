<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header / Product card -->
        <LinearLayout
            android:id="@+id/cardProduct"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card">

            <TextView
                android:id="@+id/tvProductNumber"
                tools:text="Модуль: uf-000000001"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvTechProcess"
                tools:text="Техпроцесс: УФ-3-20-ПС"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvStartAt"
                tools:text="Запуск: 2025-11-20 11:31"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/tvStepsTitle"
            android:layout_marginTop="20dp"
            android:text="@string/steps_header"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSteps"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            tools:listitem="@layout/item_step"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

        <!-- Empty state -->
        <TextView
            android:id="@+id/tvEmpty"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:text="Этапы отсутствуют"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
